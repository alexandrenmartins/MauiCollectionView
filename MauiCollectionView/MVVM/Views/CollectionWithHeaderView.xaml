<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiCollectionView.MVVM.Views.CollectionWithHeaderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MauiCollectionView.MVVM.ViewModels"
    Title="CollectionWithHeaderView">

    <ContentPage.BindingContext>
        <vm:ProdutoViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Produtos}">
        <CollectionView.Header>
            <HorizontalStackLayout BackgroundColor="LightGray">
                <Label
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    FontSize="12"
                    Text="Nome" />
                <Label
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    FontSize="12"
                    Text="PreÃ§o" />
            </HorizontalStackLayout>
        </CollectionView.Header>
        <CollectionView.Footer>
            <StackLayout BackgroundColor="LightGray">
                <Label
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    FontSize="12"
                    Text="TESTE DE FOOTER" />
            </StackLayout>
        </CollectionView.Footer>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        Text="{Binding Nome}" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Italic"
                        Text="{Binding Preco}"
                        VerticalOptions="End" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>